@model List<WebAtividadeEntrevista.Models.BeneficiarioModel>

<div class="row">
    <div class="col-lg-12">
        <div class="pull-left">
            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#beneficiarios">Beneficiários</button>
        </div>
    </div>
</div>

<div id="beneficiarios" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h7 class="modal-title">Beneficiários</h7>
            </div>
            <div class="modal-body">
                <form id="formBeneficiario" method="post">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="CPF">CPF:</label>
                                <input required="required" type="text" class="form-control CPF" id="CPFBeneficiario" name="CPF" placeholder="Ex.: 999.999.999-99">
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group">
                                <label for="Nome">Nome:</label>
                                <input required="required" type="text" class="form-control" id="NomeBeneficiario" name="Nome" placeholder="Ex.: João" maxlength="50">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="submit" class="btn btn-success " style="display:block">Incluir</button>
                            </div>
                        </div>
                    </div>
                </form>
                @if (Model != null )
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>CPF</th>
                                <th>Nome</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody id="inicioTabela">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="CPF cpfVelho">@Html.DisplayFor(modelItem => item.CPF)</td>
                                    <td class="nomeVelho">@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td>
                                        <button type="button" class="btn btn-primary">Alterar</button>
                                        <button type="button" class="btn btn-primary">Excluir</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>*@
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
